gcloud run services logs read trivia-video --region=asia-southeast1 --limit=50

curl -X POST https://trivia-video-471441898916.asia-southeast1.run.app \
  -H "Content-Type: application/json" \
  -d '{
        "question": "What is the capital of Japan?",
        "choices": "A: Tokyo\nB: Seoul\nC: Beijing\nD: Bangkok",
        "answer": "Tokyo",
        "background": "gs://trivia-videos-output/background.jpg",
        "output": "gs://trivia-videos-output/trivia_japan.mp4"
      }

# Set project once
gcloud config set project trivia-machine-472207

# ðŸ”¨ Rebuild without cache
gcloud builds submit --no-cache \
  --tag asia-southeast1-docker.pkg.dev/trivia-machine-472207/trivia-repo/trivia-video

# ðŸš€ Deploy with safe runtime settings
gcloud run deploy trivia-video \
  --image asia-southeast1-docker.pkg.dev/trivia-machine-472207/trivia-repo/trivia-video \
  --region asia-southeast1 \
  --platform managed \
  --allow-unauthenticated \
  --concurrency=1 \
  --timeout=900s \
  --max-instances=1 \
  --cpu=2 \
  --memory=2Gi \
  --set-env-vars=PORT=8080 \
  --startup-cpu-boost


curl -X POST https://trivia-video-471441898916.asia-southeast1.run.app//generate \
  -H "Content-Type: application/json" \
  -d '{"text":"Trivia: The Eiffel Tower can be 15 cm taller in summer!"}'
  


